{
  "defaultSeverity": "warning",
  "extends": [
    "tslint:recommended"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**"
    ]
  },
  "rules": {
    "quotemark": [
      true,
      "single"
    ],
    "indent": [
      true,
      "spaces",
      2
    ],
    "interface-name": false,
    "ordered-imports": false,
    "object-literal-sort-keys": false,
    "arrow-parens": [
      "as-needed",
      {
        "requireForBlockBody": true
      }
    ],
    "no-consecutive-blank-lines": false,
    "no-console": [
      false,
      "log",
      "dir",
      "error"
    ],
    "object-literal-key-quotes": [
      true,
      "as-needed"
    ],
    "space-before-function-paren": [
      true,
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "always"
      }
    ],
    "member-access": false
  }
}