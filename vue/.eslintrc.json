{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "plugin:vue/essential",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["vue"],
  "rules": {
    "no-undef": "error"
  },
  "globals": {
    "module": "readonly",
    "require": "readonly",
    "process": "readonly",
    "google": "readonly"
  },
  "ignorePatterns": ["**/*.d.ts", "src/main.ts"]
}
